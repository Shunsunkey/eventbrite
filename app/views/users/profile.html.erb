<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Profil de <%= @user.full_name %></h2>

      <div class="field">
        <strong>Email:</strong>
        <%= @user.fake_email %>
      </div>

      <div class="field">
        <strong>Prénom:</strong>
        <%= @user.first_name %>
      </div>

      <div class="field">
        <strong>Nom de famille:</strong>
        <%= @user.last_name %>
      </div>

      <div class="field">
        <strong>Âge:</strong>
        <%= @user.age %>
      </div>

      <div class="field">
        <strong>Description:</strong>
        <%= @user.description %>
      </div>

      <%= link_to "Contacter #{@user.full_name}", new_message_path(recipient_id: @user.id), class: "btn btn-primary" %>
    </div>
  </div>
</div>
